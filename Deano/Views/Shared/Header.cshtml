<!-- header begins -->
<script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script type="text/javascript">
    function SetCurrentMenu(id) {
        $('#' + id).removeClass('button');
        $('#' + id).addClass('buttonSelected');
    }
</script>
<div id="header">
    <div id="title">
        <img title="Deano's Guide Service" alt="Deano's Guide Service" style="float: left" src="../../Content/Images/deanos_logo.gif" />
        <div style="float: left; margin-top: 15px; font-size: 14px; font-style: bold; margin-right: 55px">
            <div style="padding: 3px">
                11292 W. Sandy Point Rd.</div>
            <div style="padding: 3px">
                Couderay, WI 54828
            </div>
            <div style="padding: 3px">
                (715) 558-8732</div>
        </div>
        <div style="float: right; margin-top: 0px; height: 90px; margin-right: 0px">
            @if (!Request.IsAuthenticated)
            {
                using (Ajax.BeginForm("LogIn", null, new AjaxOptions(), new { id = "frmLogIn" }))
                {                 
                <table id="loginTable">
                    <tr>
                        <td>
                            Username:
                        </td>
                        <td class="inputTableCell">
                            <input id="Username" class="credentials" name="Username" type="text" />
                            @Html.ValidationMessage("Username")
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Password:
                        </td>
                        <td class="inputTableCell">
                            <input id="Password" class="credentials"  name="Password" type="password" />
                            @Html.ValidationMessage("Password")
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" style="text-align: right; text-decoration: underline">
                            <a href="javascript:void(0)" style="margin-right: 25px" onclick="login()">Login</a>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" style="text-align: right; text-decoration: underline">
                            <a href="javascript:void(0)" style="margin-right: 25px" onclick="loadCreateAccount()">
                                Create an Account</a>
                        </td>
                    </tr>
                </table>
                }
            }
            else
            {
                <table id="logoutTable">
                    <tr>
                        <td>
                            Logged in as
                        </td>
                        <td class="inputTableCell">
                            <a href="javascript:void(0)" onclick="loadMemberIndex()">@User.Identity.Name</a>
                        </td>
                    </tr>
                    <tr>
                        <td class="inputTableCell" colspan="2" style="text-decoration: underline">
                            <a href="#" onclick="logout()">Log out</a>
                        </td>
                    </tr>
                </table>
            }
        </div>
        <div id="failed"  title="Click to close" onclick="$(this).hide()" style="display: none; float: right; margin-top: 20px; color: red;
            margin-right: 60px;">
            <div>
                Log in failed, please try again.</div>
            <div>
                Click <a onclick="loadForgotPassword()" href="javascript:void(0)">here</a> if you
                forgot your password.</div>
        </div>
        <div id="menu" style="padding-top: 26px">
            <div id="btnHome" class="button">
                <a href="/Home/fishing-guide-home">Home</a>
            </div>
            <div id="btnRates" title="click here to view guide service fishing rates." class="button">
                <a href="/Home/fishing-guide-rates">Rates</a>
            </div>
            <div id="btnReports" title="click here to view fish reports." class="button">
                <a href="/fish-reports/chippewa-flowage-hayward">Reports</a>
            </div>
            <div id="btnPhotos" title="click here to view fishing photos." class="button">
                <a href="/fish-photos/chippewa-flowage-hayward">Photos</a>
            </div>
            <div id="btnForum"  title="click here to view fishing forums."  class="button">
                <a href="/fish-forums/chippewa-flowage-hayward">Forums</a>
            </div>
            <div id="btnDirections" title="click here to get directions to deano's guide service."  class="button">
                <a href="/Home/fishing-guide-directions">Directions</a>
            </div>
            <div id="btnContact" title="click here to contact deano's guide service." class="button">
                <a href="/Home/fishing-guide-request">Contact</a>
            </div>
        </div>
    </div>
</div>
<!-- header ends -->
